@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ProjectItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "mainLayoutCshtml.cshtml";

    var content = Model.Value<string>("projectContent");
    var projectTitle = Model.Value<string>("projectTitle");

}

<section class="sub-header-section">
    <div class="background" style="background-image:url('/images/sub-header-bg-image.png'); background-size: cover; background-position: 10%;">

        <div class="container">

            <div class="content">
                <h1>
                    @projectTitle
                </h1>

                <p>
                    <a href="/">Home</a>
                    >
                    <a href="/services">Services</a>
                    >
                    <span>@projectTitle</span>
                </p>

            </div>
        </div>
    </div>
</section>

<section id="project-item">

    <div class="container">

        <div class="left">
            @Html.Raw(content)
        </div>

        <div class="right">
            <div class="about-us-box">
                <p>About Us</p>
                <img src="~/images/success-stories-image.png" />
                <p>Dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non </p>
            </div>

            <div class="online-support-box">
                <p class="title">How can we help you?</p>
                <p>Online support 24/7, we are here to help you</p>
                <input placeholder="E-mail Address" />
            </div>

        </div>

    </div>

</section>

@await Html.PartialAsync("partials/static/contactSection.cshtml")
